#!/bin/bash

if [ "$1" = "n" ]
then
	sudo nvidia-prime-select nvidia
	echo "Selected mode is NVIDIA."

elif [ "$1" = "l" ]
then
	sudo rm -rf /etc/X11/xorg.conf # remove Xorg
	echo "Selected mode is LAPTOP."

else
	echo "bruh, 'n' for nvidia, 'l' for laptop"
	exit 1
fi

# init this bruv
startx ~/.xinitrc nacho

if ["$1" = n]
then
	xrandr --output eDP-1 --mode 1920x1080 --pos 1920x0 --rotate normal --output HDMI-1-0 --primary --mode 1920x1080 --pos 0x0 --rotate normal
fi

exit 0
